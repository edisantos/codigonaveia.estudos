@{
    ViewData["Title"] = "RegistroResposta";
}

<div class="Container">
    <br />

    @if (ViewBag.Perguntas != null)
    {
        <h3 class="text-center alert alert-info">Questionário : @ViewBag.QuestionarioTitulo</h3>
        
        <hr />
        <form asp-action="RegistroResposta" asp-controller="Resposta" method="post">
            @foreach (var item in ViewBag.Perguntas)
            {


            <label><strong>@item.Pergunta ?</strong></label>
            <input type="hidden" value="@item.QuestionarioId" name="QuestionarioId">
            <input type="hidden" value="@item.PerguntaId" name="PerguntaId">
            <input type="text" class="form-control" name="RespostaNome">
            <hr />



            }
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    }


</div>
